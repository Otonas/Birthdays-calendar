@using DayPilot.Web.Mvc.Events.Month

@{
    ViewBag.Title = "Home Page";
}
<script src="@Url.Content("~/Scripts/daypilot-all.min.js")" type="text/javascript"></script>



<div class="jumbotron">    
    <div class="row row-header align-items-center ">
        <div class="col-5 col-md-4 col-lg-3">
            <img src="~/Content/img/logo.png" class="img-fluid">
        </div>
        <div class="col-auto offset-md-1 ">
            <h1>Birthdays calendar</h1>
            <div class="card card-block bg-faded hidden-md-down">
                <blockquote class="blockquote headblockquote">
                    <p class="mb-0">
                        You don't get older, you get better.                        
                    </p>
                    <footer class="blockquote-footer">
                        <cite title="Source Title">
                            Shirley Bassey                           
                        </cite>
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>    
</div>

<div class="row ">
    <div class="col-12 buttonsnext">

        <a href="javascript:dp.commandCallBack('previous');" class="btn btn-primary btn-sm" role="button">Previous</a>
        <a href="javascript:dp.commandCallBack('today');" class="btn btn-primary btn-sm" role="button">Today</a>
        <a href="javascript:dp.commandCallBack('next');" class="btn btn-primary btn-sm" role="button">Next</a>
    </div>
</div>


<div class="row">
    <div class="col-12 ">

@Html.DayPilotMonth("dp", new DayPilotMonthConfig
{
    BackendUrl = Url.Content("~/Home/Backend"),    

})
</div>
</div>









